{
  "name": "Investigations Portal - Lite",
  "version": "1.0.0",
  "description": "Builds docx reports using templates, presets, and form inputs.",
  "main": "main.js",
  "author": "Robert Sirois and Universes Games",
  "license": "Apache",
  "homepage": "https://github.com/rpsirois-le",
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-jsy-lite": "^0.9.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-jsy": "^0.15.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.1",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13",
    "electron-packager": "^15.4.0",
    "file-loader": "*",
    "html-webpack-plugin": "^2.28.0",
    "style-loader": "^0.17.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "url-loader": "*",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "angular-expressions": "^1.0.0",
    "body-parser": "^1.19.0",
    "bulma-divider": "^0.2.0",
    "busboy": "^0.3.1",
    "docxtemplater": "^3.14.4",
    "express": "^4.17.1",
    "jsy-node": "^1.6.3",
    "lunr": "^2.3.9",
    "moment-timezone": "*",
    "pizzip": "^3.0.6",
    "react": "^16.2.0",
    "react-bulma-components": "^3.1.3",
    "react-dom": "^16.2.0",
    "uuidv4": "^5.0.1"
  },
  "scripts": {
    "build": "webpack",
    "prestart": "webpack",
    "start": "electron .",
    "deploy": "set CSC_LINK=https://universesapi.s3.us-west-2.amazonaws.com/uni/certs/Universes+Games.pfx & electron-builder build"
  },
  "build": {
    "win": {
      "target": "portable",
      "certificateFile": "./deployWindowsFiles/Universes Games.pfx",
      "icon": "./deployWindowsFiles/icon.png"
    },
    "extraFiles": [
      {
        "from": "docx",
        "to": "resources/docx",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "json",
        "to": "resources/json",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "static",
        "to": "resources/static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "templates",
        "to": "resources/templates",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "./dist"
    }
  }
}
